<!DOCTYPE html>
<html lang="en" ng-app="BlogApp">
<head>
  <meta charset="utf-8">
  <title>Blog</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-sanitize.js"></script>
  <script src="js/app.js"></script>
</head>
<body>
  <div class="container" ng-controller="BlogController">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="pull-left align-middle">Blog</h1>
        <h4 class="pull-right align-middle"><a href="/logout">Log Out</a></h4>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8">
        <input ng-model="post.title" placeholder="Title" class="form-control"/>
        <textarea ng-model="post.body" placeholder="Paragraph" class="form-control" rows="10"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 form-inline">
        <div class="checkbox">
          <label>
            <input type="checkbox"> POLITICS
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox"> ECONOMY
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox"> EDUCATION
          </label>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <button ng-click="createPost(post)" class="form-control btn btn-primary">Post</button>
      </div>
      <div class="col-sm-3">
        <button ng-click="updatePost(post)" class="form-control btn btn-success">Update</button>
      </div>
    </div>

    <div class="row">
      <div ng-repeat="post in posts | orderBy: '-posted'" class="col-sm-8">
        <h2>{{ post.title }}
          <a ng-click="editPost(post._id)" class="pull-right"><span class="glyphicon glyphicon-pencil"></span></a>
          <a ng-click="deletePost(post._id)" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
        </h2>
        <p class="text-muted"><em>{{ post.posted | date : 'EEEE, MMM d, y h:mm a' }}</em></p>
        <p class="lead" ng-bind-html="post.body"></p>
      </div>
    </div>

  </div>


  </body>
</html>
